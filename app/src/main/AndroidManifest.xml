<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inspectplus.dpwgroup.com.inspectplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:name=".utils.MyApplication"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activities.SplashActivity" />
        </activity>
        <activity android:name=".activities.ListViewActivity"></activity>
        <activity android:name=".activities.TodoListActivity"></activity>
        <activity android:name=".activities.TodoListDetailActivity"></activity>
        <activity android:name=".activities.ImageGalleryActivity"></activity>
        <activity android:name=".activities.ProjectHomeActivity"></activity>


    </application>

</manifest>
